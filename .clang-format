BasedOnStyle: Google

IncludeIsMainRegex: "$"
SortIncludes: true
IncludeBlocks: Regroup

IncludeCategories:
    # Project headers
  - Regex: '^".*\.(h|hpp)"$'
    Priority: 1
    # Test framework headers
  - Regex: '^<SFML/.*\.(h|hpp)>$'
    Priority: 2
    # System headers
  - Regex: '^<.*\.(h|hpp)>$'
    Priority: 3
    # Any other include
  - Regex: '.*'
    Priority: 4

IndentWidth: 4
ColumnLimit: 80
